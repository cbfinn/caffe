layer {
  name: "flatten_down"
  type: "Flatten"
  bottom: "downsampled"
  top: "downsampled"
}

layer {
  name: "loss"
  type: "EuclideanLoss"
  bottom: "reconstruction"
  bottom: "downsampled"
  top: "euclidean_error"
  loss_weight: 1
}

