name: "JointAndImageStateRegressionNet"
layer {
  name: "data"
  type: "HDF5Data"
  top: "position"
  top: "rgb_frames"
  #top: "rgb_frames+1"
  hdf5_data_param {
    source: "examples/vgps/train_demo.txt"
    batch_size: 25
  }
  include: { phase: TRAIN }
}
layer {
  name: "data"
  type: "HDF5Data"
  top: "position"
  top: "rgb_frames"
  #top: "rgb_frames+1"
  hdf5_data_param {
    source: "examples/vgps/val_demo.txt"
    batch_size: 5
  }
  include: {
    phase: TEST
    stage: 'test-on-val'
  }
}

layer {
  name: "data"
  type: "HDF5Data"
  top: "position"
  top: "rgb_frames"
  #top: "rgb_frames+1"
  hdf5_data_param {
    source: "examples/vgps/train_demo.txt"
    batch_size: 5
  }
  include: {
    phase: TEST
    stage: 'test-on-train'
  }
}

